@using CSharpProject.Models

<center>
<h3 style="color:orangered">Public Answers</h3>
</center>
@foreach(Answer ans in Model)
                 {
    
                     
                    <div style="background-color:wheat; padding-top:1em; padding-right:1em; padding-left:1em">
                    <h4>@ans.Answer1</h4>
                    <br />
                    
                     
                     @if(ans.Image != null)
                     {
                         <img src="~/Answers/@ans.Image" alt="Image" style="width:200px; height:200px"/>
                         <br /><br />
                     }
                    @if (ans.ProfilePicture != null)
                    {
                        <img src="~/ProfilePictures/@ans.ProfilePicture" alt="Image" style="width:50px; height:50px; float:right"/>
                    }
                    <b style="float:right">Answered by: @ans.username</b> <br />
                    <b style="float:right">Answered at: @ans.Date</b>
                     <br />
                     
                        <br />
                    
                     </div>
                     <br /><br />
                 }




                

 